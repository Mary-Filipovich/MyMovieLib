<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_express"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fml_v_guideline_screen_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fml_v_guideline_screen_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fml_h_guideline_actionbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <TextView
            android:id="@+id/fml_tv_movies_list"
            style="@style/FmlTextViewFragmentTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fml_tv_text_movies_list"
            app:drawableLeftCompat="@drawable/ic_movies_list"
            app:layout_constraintStart_toStartOf="@id/fml_v_guideline_screen_start"
            app:layout_constraintTop_toTopOf="@id/fml_h_guideline_actionbar" />

        <View
            android:id="@+id/fml_v_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_movie_card"
            android:shadowColor="@color/black_50_opacity"
            android:shadowDy="16"
            android:shadowRadius="24"
            app:layout_constraintBottom_toBottomOf="@id/fml_h_guideline_card_bottom"
            app:layout_constraintEnd_toEndOf="@id/fml_v_guideline_card_end"
            app:layout_constraintStart_toStartOf="@id/fml_v_guideline_screen_start"
            app:layout_constraintTop_toBottomOf="@id/fml_tv_movies_list" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fml_siv_card_poster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_poster"
            app:layout_constraintBottom_toTopOf="@id/fml_tv_movie_title"
            app:layout_constraintEnd_toEndOf="@id/fml_v_card"
            app:layout_constraintStart_toStartOf="@id/fml_v_card"
            app:layout_constraintTop_toTopOf="@id/fml_v_card"
            app:shapeAppearanceOverlay="@style/PosterCardImageViewStyle" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_card_poster"
            app:layout_constraintBottom_toBottomOf="@id/fml_siv_card_poster"
            app:layout_constraintEnd_toEndOf="@id/fml_siv_card_poster"
            app:layout_constraintStart_toStartOf="@id/fml_siv_card_poster"
            app:layout_constraintTop_toTopOf="@id/fml_siv_card_poster" />

        <TextView
            android:id="@+id/fml_tv_age_limit"
            style="@style/FmlTextViewAgeLimitStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_limit_text"
            app:layout_constraintStart_toStartOf="@id/fml_v_card"
            app:layout_constraintTop_toTopOf="@id/fml_v_card" />

        <ImageView
            android:id="@+id/fml_iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/fml_iv_cd_like_button"
            android:src="@drawable/ic_like"
            app:layout_constraintEnd_toEndOf="@id/fml_v_card"
            app:layout_constraintTop_toTopOf="@id/fml_v_card" />

        <TextView
            android:id="@+id/fml_tv_tag_line"
            style="@style/FmlTextViewTagLineStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/amd_tv_tag_line_text"
            app:layout_constraintBottom_toTopOf="@id/fml_rating_bar_stars"
            app:layout_constraintEnd_toEndOf="@id/fml_v_card"
            app:layout_constraintStart_toStartOf="@id/fml_v_card" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/fml_rating_bar_stars"
            style="@style/RatingBarOnMoviesListStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:progress="80"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:theme="@style/RatingBarOnMoviesListStyle"
            app:layout_constraintBottom_toBottomOf="@id/fml_siv_card_poster"
            app:layout_constraintStart_toStartOf="@id/fml_v_card" />

        <TextView
            android:id="@+id/fml_tv_review_number"
            style="@style/FmlTextViewReviewNumberStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amd_tv_review_number_text"
            app:layout_constraintBottom_toBottomOf="@id/fml_rating_bar_stars"
            app:layout_constraintStart_toEndOf="@id/fml_rating_bar_stars"
            app:layout_constraintTop_toTopOf="@id/fml_rating_bar_stars" />

        <TextView
            android:id="@+id/fml_tv_movie_title"
            style="@style/FmlTextViewMovieTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/amd_tv_movie_title_text"
            app:layout_constraintBottom_toTopOf="@id/fml_tv_duration"
            app:layout_constraintEnd_toEndOf="@id/fml_v_card"
            app:layout_constraintStart_toStartOf="@id/fml_v_card" />

        <TextView
            android:id="@+id/fml_tv_duration"
            style="@style/FmlTextViewMovieDurationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fml_tv_text_duration"
            app:layout_constraintBottom_toBottomOf="@id/fml_v_card"
            app:layout_constraintStart_toStartOf="@id/fml_v_card" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fml_v_guideline_card_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fml_h_guideline_card_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>